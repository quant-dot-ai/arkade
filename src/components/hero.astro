---
import { Picture } from "astro:assets";
import heroImage from "assets/hero.png";
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon";
---

<main
  class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
  <div class="py-6 md:order-1 hidden md:block">
    <Picture
      src={heroImage}
      alt="Astronaut in the air"
      widths={[200, 400, 600]}
      sizes="(max-width: 800px) 100vw, 620px"
      loading="eager"
      format="avif"
    />
  </div>
  <div>
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
      Level Up! <!--<img src="src/assets/taffy-taffy-coin.gif" alt="Gold Coin" style="width: 30px; height: 30px;"> -->
      <br>
      Your marketing.
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      Arkade provides the best quality videos for your brand with proper research & 
personalized scripting for every video that's posted.<wbr /> Get ready to level up!
    </p>
    
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link
        href="#"
        href="https://www.instagram.com/madebyarkade?igsh=MXM0dGl5aDV0bW9jYw=="
        target="_blank"
        class="flex gap-1 items-center justify-center"
        rel="noopener">
        <Icon class="text-white w-5 h-5" name="mdi:instagram" />

         Our work
      </Link>

      <Link
        size="lg"
        style="outline"
        rel="noopener"
        href="https://github.com/surjithctly/astroship"
        class="flex gap-1 items-center justify-center"
        target="_blank">
        <Icon class="text-black w-4 h-4" name="ri:drive-fill" />
         All Work
      </Link>

    </div>
  </div>
</main>
